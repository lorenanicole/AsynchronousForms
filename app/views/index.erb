<div class="container">
  <h1>Deaf Grandma</h1>

  <div id="result"></div>

  <% if @grandma %>
    <p>Grandma says: "<span id="grandma_says"><%= @grandma %></span>"</p>
  <% end %>

  <form class=".grandma" action="/grandma" method="post">
    Say something to Grandma:
    <br>
    <input type="text" name="user_input">
    <input type="submit" value="Say it!">
  </form>

</div>
